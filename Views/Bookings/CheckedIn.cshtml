@model List<HotelManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Checked-In Guests";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Checked-In Guests</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            No guests are currently checked in.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Guest</th>
                    <th>Room</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.GuestName<br /><small>@booking.GuestEmail</small></td>
                        <td>@booking.Room?.Name</td>
                        <td>@booking.CheckinDate.ToString("MMM dd, yyyy")</td>
                        <td>@booking.CheckoutDate.ToString("MMM dd, yyyy")</td>
                        <td><span class="badge bg-success">@booking.Status</span></td>
                        <td>
                            <form asp-action="CheckOut" asp-route-id="@booking.Id" method="post">
                                <button class="btn btn-dark btn-sm">Check Out</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
