@model List<HotelManagementSystem.Models.Room>

@{
    ViewData["Title"] = "Rooms & Rates";
}

<h2 class="mb-4">Rooms & Rates</h2>

@if (Model.Count == 0)
{
    <p>No rooms available right now.</p>
}
else
{
    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@room.ImageUrl" class="card-img-top" alt="Room Image" />
                    <div class="card-body">
                        <h5 class="card-title">@room.Name</h5>
                        <p class="card-text">â‚±@room.PricePerNight per night</p>
                        <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@room.Id" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
