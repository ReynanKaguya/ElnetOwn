@model List<HotelManagementSystem.Models.Room>

@{
    ViewData["Title"] = "Rooms & Rates";
}

<style>
    body {
        background-color: #f2f4f8;
    }

    h2 {
        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
        font-weight: 700;
        color: #2e2e2e;
    }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background-color: #ffffff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.07);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        height: 220px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .card-body {
        padding: 1.5rem;
        background-color: #fffefc;
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #3b3b3b;
    }

    .card-text {
        font-size: 1rem;
        color: #666;
        margin-bottom: 1.2rem;
    }

    .btn-primary {
        background: linear-gradient(90deg, #b29f7e, #decba4);
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        transition: background 0.3s ease, color 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(90deg, #c7b58a, #f2e2c0);
        color: #000;
    }
</style>

<div class="container">
    <h2>Rooms & Rates</h2>

    @if (Model.Count == 0)
    {
        <p class="text-center text-muted">No rooms available right now.</p>
    }
    else
    {
        <div class="row">
            @foreach (var room in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100">
                        <img src="@room.ImageUrl" class="card-img-top" alt="Room Image">
                        <div class="card-body">
                            <h5 class="card-title">@room.Name</h5>
                            <p class="card-text">â‚±@room.PricePerNight.ToString("N2") per night</p>
                            <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@room.Id" class="btn btn-primary w-100">Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
